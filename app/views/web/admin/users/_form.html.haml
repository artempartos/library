= simple_form_for @user, url: @url, :html => { :class => 'form-horizontal' } do |f|
  = f.input :email
  = f.input :login
  = f.input :password
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_users_path, :class => 'btn'
