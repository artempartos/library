= simple_form_for @user, url: users_path, :html => { :class => 'form-horizontal' } do |f|
  = f.input :email
  = f.input :password
  #company
    = f.simple_fields_for :company do |c|
      = c.label :company
      = c.input :name
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
