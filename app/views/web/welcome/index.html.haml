.jumbotron
  %h1= t('application.name')
  %p.lead= t('application.description')
#welcome.panel-body
  .row
    #cara.carousel.slide
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#cara"}
        %li{"data-slide-to" => "1", "data-target" => "#cara"}
        %li{"data-slide-to" => "2", "data-target" => "#cara"}
        %li{"data-slide-to" => "3", "data-target" => "#cara"}
      .carousel-inner
        .item.active
          = image_tag 'book2.png'
          .container
            .carousel-caption
              %h1=t(".item1.header")
              %p
                =t(".item1.caption")
              %p= link_to t('.item1.link_button'), root_path, class: 'btn btn-large btn-primary'
        #item2.item
          = image_tag 'book1.png'
          .container
            .carousel-caption
              %h1=t(".item2.header")
              %p
                =t(".item2.caption")
                = link_to t('.item2.link_text'), root_path
        .item
          = image_tag 'book4.png'
          .container
            .carousel-caption
              %h1=t(".item3.header")
              %p
                = link_to t('.item3.link_text'), root_path
        .item
          = image_tag 'book5.png'
          .container
            .carousel-caption
              %h1=t(".item4.header")
              %p
                =t(".item4.caption")
      %a.left.carousel-control{"data-slide" => "prev", :href => "#cara"}
        %span.icon-prev
      %a.right.carousel-control{"data-slide" => "next", :href => "#cara"}
        %span.icon-next