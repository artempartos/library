%h1= t '.title'

= simple_form_for @user, url: account_profile_path,
  html: { class: 'form-horizontal' } do |f|
  = f.input :email
  = f.input :first_name
  = f.input :last_name
  = f.input :phone
  = f.input :avatar, as: :image_preview
  = f.input :remove_avatar, as: :boolean

  .form-actions
    = f.button :submit
